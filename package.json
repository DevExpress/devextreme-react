{
  "author": "Developer Express Inc.",
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "description": "DevExtreme React UI and Visualization Components",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevExpress/devextreme-react.git"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "devextreme-internal-tools": "10.0.0-beta.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-devextreme": "^0.1.40",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-qunit": "^4.3.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-spellcheck": "0.0.14",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "istanbul": "^0.4.5",
    "istanbul-cobertura-badger": "^1.3.1",
    "jest": "^25.0.0",
    "lerna": "^3.22.1",
    "ts-jest": "^25.5.1"
  },
  "config": {
    "devextreme": "./devextreme"
  },
  "scripts": {
    "restore-devextreme": "git submodule init && git submodule update && cd devextreme && git add . && cd .. && git submodule update --force --checkout && npm i --prefix ./devextreme",
    "pull-devextreme": "npm run restore-devextreme -- --remote && npm i --prefix ./devextreme",
    "generate-metadata:discover": "npm run discover-declarations --prefix $npm_package_config_devextreme",
    "generate-metadata:integration": "dx-tools integration-data-generator --js-scripts $npm_package_config_devextreme/js --artifacts $npm_package_config_devextreme/artifacts/internal-tools --output-path ./packages/devextreme-react/metadata/integration-data.json",
    "generate-metadata": "npm run generate-metadata:discover && npm run generate-metadata:integration",
    "clean": "npm run clean:packages && npm run clean:root",
    "clean:packages": "lerna clean --yes",
    "clean:root": "del-cli node_modules",
    "start": "npm run generate-metadata && lerna run build && lerna run --scope devextreme-react-sandbox start",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --no-ci --hoist",
    "build": "npm run generate-metadata && lerna run build && npm run lint",
    "lint": "gulp lint",
    "test": "npm run generate-metadata && lerna run build && jest --coverage",
    "test-watch": "jest --watch",
    "pack": "npm run generate-metadata && lerna run pack"
  },
  "keywords": [
    "react",
    "devextreme",
    "devexpress"
  ],
  "license": "MIT"
}
