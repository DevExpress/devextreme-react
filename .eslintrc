{
    "extends": [
        "devextreme/typescript"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "ignorePatterns": ["**/devextreme-react/src/*.ts", "**/devextreme-react/src/ui/*.ts", "node_modules"],
    "parserOptions": {
        "project": ["./tsconfig.json", "./packages/**/tsconfig.json", "./example/tsconfig.json"]
    },
    "rules": {
        "import/no-cycle": "warn",
        "no-param-reassign": "warn",
        "no-underscore-dangle": "warn",
        "@typescript-eslint/no-explicit-any": "warn"
    },
    "overrides": [
        {
            "files": [ "./example/*.ts", "./example/*.tsx" ],
            "rules": {
                "import/extensions": "warn"
            }
        }
    ]
}
