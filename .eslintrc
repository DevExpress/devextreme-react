{
    "extends": [
        "devextreme/typescript"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "ignorePatterns": [
        "packages/devextreme-react/src/*.ts",
        "packages/devextreme-react/src/ui/*.ts",
        "node_modules",
        "dist",
        "packages/devextreme-react/**/*.test.tsx",
        "packages/devextreme-react/**/*.test.ts",
        "packages/sandbox"
    ],
    "parserOptions": {
        "project": ["./tsconfig.json", "./packages/*/tsconfig.json"]
    },
    "rules": {
        "import/no-cycle": "warn",
        "no-param-reassign": "warn",
        "no-underscore-dangle": "warn",
        "@typescript-eslint/no-explicit-any": "warn",
        "no-restricted-globals": "off"
    },
    "overrides": [
        {
            "files": [ "./packages/sandbox/*.ts", "./packages/sandbox/*.tsx" ],
            "rules": {
                "import/extensions": "warn"
            }
        }
    ]
}
