{
   "compilerOptions": {
     "outDir": "./dist",
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "target": "es5",
     "module": "commonjs",
     "noEmitOnError": true,
     "jsx": "react",
     "declaration": true,
     "experimentalDecorators": true,
     "forceConsistentCasingInFileNames": true,
     "noFallthroughCasesInSwitch": true,
     "noImplicitAny": false,
     "noImplicitReturns": true,
     "noImplicitThis": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "strictNullChecks": true,
     "lib": ["es2015", "dom"]
   },
   "include": [
     "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.json"
   ],
   "exclude": [
     "src/**/*.test.ts",
     "node_modules",
     "dist"
   ]
}
