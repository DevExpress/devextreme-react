{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./temp",
    "noEmitOnError": true,
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "lib": ["es2015", "dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tools/**/*.ts",
    "tools/**/*.tsx"
  ]
}
